﻿<MudNavMenu Color="Color.Surface">
    <MudNavLink Href="/" Icon="@Icons.Material.Rounded.Home" IconColor="Color.Surface" Style="color:darkgrey">Inicio</MudNavLink>
    <MudDivider />
    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudNavGroup Title="Control Sistema" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Surface" Expanded="false" Style="color:darkgrey">
