            </MudNavGroup>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="UserAux">
        <Authorized>
            <MudNavGroup Title="Configuracion Sistema" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Surface" Expanded="false" Style="color:darkgrey">
                <MudNavLink Href="/companies" Icon="@Icons.Material.Filled.Security" IconColor="Color.Info" Style="color:darkgrey">Companias</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="User">
        <Authorized>
            <MudNavGroup Title="Configuracion Sistema" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Surface" Expanded="false" Style="color:darkgrey">
                <MudNavLink Href="/usuarios" Icon="@Icons.Material.Filled.Security" IconColor="Color.Info" Style="color:darkgrey">Usuarios</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>

    <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info" Style="color:darkgrey">Nosotros</MudNavLink>
    <MudDivider />
